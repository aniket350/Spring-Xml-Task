<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- bean definitions here -->

<bean id="actor1" class="com.stackroute.spring.domain.Actor">
    <constructor-arg name="name" value="Aniket"></constructor-arg>
    <constructor-arg index="1" value="male"></constructor-arg>
    <constructor-arg type="int" value="24"></constructor-arg>
</bean>

    <bean id="movie" class="com.stackroute.spring.domain.Movie" autowire="byName">
       <property name="actor" ref="actor1"></property>
    </bean>
    <bean id="movie2" class="com.stackroute.spring.domain.Movie" autowire="byName">
        <property name="actor" ref="actor1"></property>
    </bean>
    <bean id="Beanlifecycledemo" class="com.stackroute.spring.BeanLifeCycleDemoBean" init-method="customInit" destroy-method="customDestroy">
        <property name="customInit" value="Beanlifecycledemo.customInit()"></property>
        <property name="customDestroy" value="Beanlifecycledemo.customDestroy()"></property>
    </bean>
    <bean id="beanPostProcessor" class="com.stackroute.spring.BeanPostProcessorDemoBean">
        <property name="BeanPostProcessorDemoBean" value="beanPostProcessor.BeanPostProcessorDemoBean()"></property>
    </bean>
</beans>

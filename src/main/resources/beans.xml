<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- bean definitions here -->

<bean id="actor1" class="com.stackroute.spring.domain.Actor">
    <constructor-arg name="name" value="Aniket"></constructor-arg>
    <constructor-arg index="1" value="male"></constructor-arg>
    <constructor-arg type="int" value="24"></constructor-arg>
</bean>

    <bean id="movie" class="com.stackroute.spring.domain.Movie">
        <constructor-arg ref="actor1" name="actor"></constructor-arg>
    </bean>
</beans>